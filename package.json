{
  "name": "nvision-data-collection",
  "version": "1.0.0",
  "description": "Nvision Data Collection App",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.2",
    "aws-sdk": "^2.1692.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^29.0.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4",
    "vite-plugin-node-polyfills": "^0.23.0"
  },
  "build": {
    "appId": "com.nvision.datacollection",
    "productName": "Nvision Data Collection",
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/test-patterns",
        "to": "test-patterns",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
